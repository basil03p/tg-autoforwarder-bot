{
  "name": "telegram-forwarder-bot",
  "services": [
    {
      "name": "telegram-bot",
      "type": "web",
      "instance_type": "nano",
      "regions": ["fra"],
      "env": [
        {
          "key": "API_ID",
          "value": "YOUR_API_ID"
        },
        {
          "key": "API_HASH",
          "value": "YOUR_API_HASH"
        },
        {
          "key": "BOT_TOKEN",
          "value": "YOUR_BOT_TOKEN"
        },
        {
          "key": "ADMIN_IDS",
          "value": "YOUR_USER_ID"
        }
      ],
      "ports": [
        {
          "port": 8000,
          "protocol": "http"
        }
      ],
      "routes": [
        {
          "path": "/",
          "port": 8000
        }
      ],
      "build": {
        "type": "docker",
        "dockerfile": "Dockerfile"
      }
    }
  ]
}
